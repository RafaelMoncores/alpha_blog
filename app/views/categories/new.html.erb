<div class="container mt-5">
  <h1 class="text-center">Create a new category!</h1>
  <div class="row justify-content-center">
    <div class="col-10">
        <%= render 'shared/errors', obj: @category %>
        <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", data: { turbo: false }) do |f| %>
            <div class="form-group row mb-3">
                <%= f.label :name, "Category name:", class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter this category name" %>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-auto">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            </div>
        <% end %>
    <div class="text-center mt-3">
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>