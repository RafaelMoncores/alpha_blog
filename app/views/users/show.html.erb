<h1 class="text-center mb-3"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user%>

<% if logged_in? && current_user.admin? %>
    <div class="text-center mt-4">
        <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-outline-info"%>
    </div>
<% end %>
