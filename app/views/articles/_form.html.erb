<div class="row justify-content-center">
    <div class="col-10">
        <h1 class="text-center"><%= @article.new_record? ? "Create a New Article!" : "Edit Article!" %></h1>
        <%= render'shared/errors' %>
        <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
            <div class="form-group row mb-3">
                <%= f.label :title, class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
                </div>
            </div>

            <div class="form-group row mb-3">
                <%= f.label :description, class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                    <%= f.text_area :description, rows: 5, class: "form-control shadow rounded", placeholder: "Enter description" %>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-auto">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            </div>
        <% end %>
    <div class="text-center mt-3">
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
</div>