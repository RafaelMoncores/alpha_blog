<div class="container mt-5">
  <h1 class="text-center mb-4">Listing all articles</h1>
  <div class="justify-content-center text-center mb-4">
    <%= link_to "Create new Article!", new_article_path(@article), class: "btn btn-success btn-lg" %>
  </div>
  <% @articles.each do |article| %>
    <div class="row justify-content-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow-lg mb-5 bg-body-tertiary rounded">
          <p class="card-header font-italic">
            by Rafael Mon√ßores
          </p>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(article.description, lenght: 100) %></p>
            <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at) %> ago, 
            edited <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>